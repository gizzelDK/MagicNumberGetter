<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">

    <ActionBar title="Magic Number Getter" icon="" />
    <StackLayout>
        <!-- Add your page content here -->
        <Label text="Number One" />
        <Label id="labelOne" text="{{numOne}}" />
        <Button id="btnGetNumOne" tap="goGetNumOne" text="Get first number" />
        <Label text="Number Two" />
        <Label id="labelTwo" text="{{numTwo}}" />
        <Button id="btnGetNumTwo" tap="goGetNumTwo" text="Get second number" />
        <StackLayout orientation="horizontal">
            <Button id="add" text="add" tap="{{ add }}" />
            <Button id="sub" text="sub" tap="{{ sub }}" />
            <Button id="mul" text="mul" tap="{{ mul }}" />
            <Button id="div" text="div" tap="{{ div }}" />
        </StackLayout>
        <Label id="resultat"  class="h2 text-center" text="{{ resultat }}" />
    </StackLayout>
</Page>
